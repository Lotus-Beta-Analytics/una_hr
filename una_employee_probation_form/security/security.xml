<odoo>
    <record id="module_category_probation_reviews" model="ir.module.category">
        <field name="name">Probation Reviews</field>
        <field name="sequence">10</field>
        <field name="description">Manage employee probation reviews</field>
    </record>

    <record id="group_hr_probation_manager" model="res.groups">
        <field name="name">Managers</field>
        <field name="category_id" ref="una_employee_probation_form.module_category_probation_reviews"/>
        <!-- <field name="category_id" ref="base.module_category_human_resources"/> -->
    </record>
     <record id="group_hr_team_probation_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="una_employee_probation_form.module_category_probation_reviews"/>
        <!-- <field name="category_id" ref="base.module_category_human_resources"/> -->
    </record>
    <record id="group_hr_probation_employee" model="res.groups">
        <field name="name">Users</field>
        <field name="category_id" ref="una_employee_probation_form.module_category_probation_reviews"/>
        <!-- <field name="category_id" ref="base.module_category_human_resources"/> -->
    </record>

    <record id="employee_probation_access_rule" model="ir.rule">
        <field name="name">Departmental Probation Manager</field>
        <field name="model_id" ref="una_employee_probation_form.model_hr_probation_review"/>
        <field name="groups" eval="[(4, ref('una_employee_probation_form.group_hr_probation_manager'))]"/>
        <field name="domain_force">
            <![CDATA[
                ['|',
                    ('employee_id.department_id.id', '=', user.employee_id.department_id.id),
                    ('employee_id.parent_id.user_id', '=', user.id)
                ]
            ]]>
        </field>
    </record>


    <record id="employee_appraisal_rule" model="ir.rule">
        <field name="name">Employee: See Own Appraisals</field>
        <field name="model_id" ref="una_employee_probation_form.model_hr_probation_review"/>
        <field name="groups" eval="[(4, ref('una_employee_probation_form.group_hr_probation_employee'))]"/>
        <field name="domain_force">
            <![CDATA[
                [('employee_id.user_id', '=', user.id)]
            ]]>
        </field>
    </record>

</odoo>
