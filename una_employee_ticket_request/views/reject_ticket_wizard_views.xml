<odoo>
  <record id="view_reject_ticket_wizard_form" model="ir.ui.view">
    <field name="name">reject.ticket.wizard.form</field>
    <field name="model">reject.ticket.wizard</field>
    <field name="arch" type="xml">
      <form string="Reason for Rejection" class="oe_form">
        <group>
          <field name="reason"/>
        </group>
        <footer>
          <button string="Reject" type="object" name="confirm_rejection" class="btn btn-danger"/>
          <button string="Cancel" class="btn btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_reject_ticket_wizard" model="ir.actions.act_window">
    <field name="name">Reason for Rejection</field>
    <field name="res_model">reject.ticket.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_reject_ticket_wizard_form"/>
    <field name="target">new</field>
    <field name="context">{'default_ticket_id': active_id}</field>
  </record>
</odoo>
