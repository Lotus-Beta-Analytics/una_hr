<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Definition -->
    <record id="ratio_analysis_report" model="account.report">
        <field name="name">Ratio Analysis Report</field>
        <field name="handler">ratio.analysis.report.handler</field>
    </record>

    <!-- Action -->
    <record id="action_ratio_analysis_report" model="ir.actions.client">
        <field name="name">Ratio Analysis</field>
        <field name="tag">account_report</field>
        <field name="target">current</field>
        <field name="context">{'report_id': ref('ratio_analysis_report')}</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ratio_analysis_report"
              name="Ratio Analysis"
              parent="account.menu_finance_reports"
              action="action_ratio_analysis_report"
              sequence="240"/>
</odoo>
