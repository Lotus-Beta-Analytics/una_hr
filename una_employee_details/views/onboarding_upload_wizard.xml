<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Wizard Form View -->
    <record id="view_onboarding_upload_wizard_form" model="ir.ui.view">
      <field name="name">onboarding.upload.wizard.form</field>
      <field name="model">onboarding.upload.wizard</field>
      <field name="arch" type="xml">
        <form string="Upload Onboarding Documents">
          <group>
            <field name="employee_id" readonly="1" options="{'no_create': True}"/>
          </group>
          <group string="Upload Documents">
            <field name="cv_attachment" filename="cv_filename"/>
            <field name="cv_filename" invisible ="1"/>

            <field name="medical_attachment" filename="medical_filename"/>
            <field name="medical_filename" invisible ="1"/>

            <field name="police_report_attachment" filename="police_report_filename"/>
            <field name="police_report_filename" invisible ="1"/>

            <field name="credentials_attachment" filename="credentials_filename"/>
            <field name="credentials_filename" ninvisible ="1"/>

            <field name="passport_photo_attachment" filename="passport_photo_filename"/>
            <field name="passport_photo_filename" invisible ="1"/>

            <field name="bond_ack_attachment" filename="bond_ack_filename"/>
            <field name="bond_ack_filename" invisible ="1"/>

            <field name="loe_ack_attachment" filename="loe_ack_filename"/>
            <field name="loe_ack_filename" invisible ="1"/>

            <field name="employment_form_attachment" filename="employment_form_filename"/>
            <field name="employment_form_filename" invisible ="1"/>

            <field name="background_attachment" filename="background_filename"/>
            <field name="background_filename" invisible ="1"/>
          </group>

          <footer>
            <button string="Upload" type="object" name="action_upload" class="btn-primary"/>
            <button string="Cancel" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_onboarding_upload_wizard" model="ir.actions.act_window">
      <field name="name">Upload Onboarding Document</field>
      <field name="res_model">onboarding.upload.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_onboarding_upload_root"
              name="Onboarding Upload"
              parent="hr.menu_hr_root"
              sequence="100"
              groups="una_employee_details.group_new_employee"/>

    <menuitem id="menu_onboarding_upload"
              name="Upload File"
              parent="menu_onboarding_upload_root"
              action="action_onboarding_upload_wizard"
              groups="una_employee_details.group_new_employee"/>

  </data>
</odoo>
