<odoo>
    <record id="group_hr_appraisal_manager" model="res.groups">
        <field name="name">Departmental Appraisal Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>
     <record id="group_hr_team_appraisal_manager" model="res.groups">
        <field name="name">Admin Appraisal Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>
    <record id="group_hr_appraisal_employee" model="res.groups">
        <field name="name">Appraisal Employee</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="hr_employee_all_access" model="ir.rule">
    <field name="name">Employee: See all</field>
    <field name="model_id" ref="hr.model_hr_employee"/>
    <field name="domain_force">[(1, '=', 1)]</field>
    <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
</record>

    <record id="hr_appraisal_rule_employee_own" model="ir.rule">
        <field name="name">Appraisal: Employees can see only their own</field>
        <field name="model_id" ref="hr_appraisal.model_hr_appraisal"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('una_hr_appraisal_advanced.group_hr_appraisal_employee'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="hr_appraisal_rule_manager_all" model="ir.rule">
    <field name="name">Appraisal: Managers see all</field>
    <field name="model_id" ref="hr_appraisal.model_hr_appraisal"/>
    <field name="domain_force">[(1, '=', 1)]</field>
    <field name="groups" eval="[(4, ref('una_hr_appraisal_advanced.group_hr_team_appraisal_manager')), (4, ref('una_hr_appraisal_advanced.group_hr_appraisal_manager'))]"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="1"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="1"/>
</record>
