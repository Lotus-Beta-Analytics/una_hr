<odoo>
    <record id="group_hr_appraisal_manager" model="res.groups">
        <field name="name">Departmental Appraisal Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>
     <record id="group_hr_team_appraisal_manager" model="res.groups">
        <field name="name">Admin Appraisal Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>
    <record id="group_hr_appraisal_employee" model="res.groups">
        <field name="name">Employee Owe Appraisal </field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="employee_departmental_access_rule" model="ir.rule">
        <field name="name">Employee: Departmental and Manager Access</field>
        <field name="model_id" ref="una_hr_appraisal_advanced.model_hr_appraisal"/>
        <field name="groups" eval="[(4, ref('una_hr_appraisal_advanced.group_hr_appraisal_manager'))]"/>
        <field name="domain_force">
            <![CDATA[
                ['|',
                    ('employee_id.department_id.id', '=', user.employee_id.department_id.id),
                    ('employee_id.parent_id.user_id', '=', user.id)
                ]
            ]]>
        </field>
    </record>


    <record id="employee_appraisal_rule" model="ir.rule">
        <field name="name">Employee: See Own Appraisals</field>
        <field name="model_id" ref="una_hr_appraisal_advanced.model_hr_appraisal"/>
        <field name="groups" eval="[(4, ref('una_hr_appraisal_advanced.group_hr_appraisal_employee'))]"/>
        <field name="domain_force">
            <![CDATA[
                [('employee_id.user_id', '=', user.id)]
            ]]>
        </field>
    </record>

</odoo>
