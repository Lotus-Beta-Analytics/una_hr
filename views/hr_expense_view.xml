<odoo>
    <data>

        <!-- Form View Inheritance -->
        <record id="view_hr_expense_sheet_form_inherit_una" model="ir.ui.view">
            <field name="name">hr.expense.sheet.form.inherit.una</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">

                    <!-- Corporate Service Approval Button -->
                    <button name="cos_approve_sheet"
                            string="COS Approve"
                            type="object"
                            class="oe_highlight"
                            groups="una_expense.corporate_service_user"
                            modifiers="{'invisible': [('state', '!=', 'manager_approved')]}" />

                    <!-- Finance Approval Button (Final Approval) -->
                    <button name="finance_approve_sheet"
                            string="Finance Approve"
                            type="object"
                            class="oe_highlight"
                            groups="una_expense.finance_user"
                            modifiers="{'invisible': [('state', '!=', 'cos_approved')]}" />

                    <!-- Refuse Button (Action, via Wizard) -->
                    <button name="%(hr_expense.hr_expense_refuse_wizard_action)d"
                            string="Refuse"
                            type="action"
                            data-hotkey="x"
                            class="btn btn-danger"
                            groups="una_expense.group_cos_approver,una_expense.group_finance_approver,una_expense.group_manager_approver"
                            modifiers="{'invisible': [('state', 'not in', ['submit', 'manager_approved', 'cos_approved'])]}"
                            context="{'hr_expense_refuse_model': 'hr.expense.sheet'}" />

                </xpath>
            </field>
        </record>

        <!-- Search View Filter for Pending Approvals -->
        <record id="view_hr_expense_sheet_search_inherit_una" model="ir.ui.view">
            <field name="name">hr.expense.sheet.search.inherit.una</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_sheet_view_search" />
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter name="pending_una_approval"
                            string="Pending Approvals (COS/Finance)"
                            domain="[('state', 'in', ('manager_approved', 'cos_approved'))]" />
                </xpath>
            </field>
        </record>

        <!-- Custom Action for Pending Approval View -->
        <record id="action_hr_expense_sheet_una_pending" model="ir.actions.act_window">
            <field name="name">Pending Expense Approvals</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="view_mode">tree,kanban,form,activity</field>
            <field name="search_view_id" ref="view_hr_expense_sheet_search_inherit_una" />
            <field name="context">{'search_default_pending_una_approval': 1}</field>
            <field name="domain">[]</field>
        </record>

        <!-- Menu Item for Custom Pending Approvals -->
        <menuitem id="menu_hr_expense_sheet_una_pending"
                  name="Pending Approvals"
                  parent="hr_expense.menu_hr_expense_root"
                  groups="una_expense.corporate_service_user,una_expense.finance_user"
                  action="action_hr_expense_sheet_una_pending" />

    </data>
</odoo>